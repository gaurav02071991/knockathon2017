<!DOCTYPE html>
<html>
<head>
    <title>Exzeo Knockathon 2019</title>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/javascripts/flipclock.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/flipclock.css"/>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css"/>
    <script src="https://use.typekit.net/tco4ujm.js"></script>
    <script>

        var target1 = new Date(2019, 8, 23, 18, 30, 0, 0);
        var target2 = new Date(2019, 8, 24, 18, 30, 0, 0);
        var start = new Date();
        var time = 0;
        var clock;

        $(document).ready(function () {

             clock = $('.clock').FlipClock({
                callbacks  : {
                    interval : function(d,x) {
                        if (clock != undefined) {
                            if (clock.getTime().time < 1) {
                                $("#message").html("<span style='color:green;'>Everything went very well!</span>");
                                clock.stop();
                            }
                        }
                    }
                }
            });

            clock.setCountdown(true);

            if (start.getTime() < target1.getTime()) {
                time = (target1.getTime() - start.getTime()) / 1000;
                $("#message").html("Time left to start ..");
                clock.setTime(time);
                clock.start();
            } else {
                time = (target2.getTime() - start.getTime()) / 1000;
                $("#message").html("Hold your breath for the Big Demo Day");
                clock.setTime(time);
                clock.start();
            }

        });
    </script>
</head>
<body>
<div class="container-fluid">
    <div class="row text-center" style="margin-top:10px;">
        <div class="row tit">
            <h1 class="tk-droid-serif text-shadow brown">Exzeo Knockathon</h1>
        </div>
        <div class="row stit tk-anisette-petite">
            <h2 class="brown text-shadow">23 - 24 August 2019</h2>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-5 col-md-offset-4 text-center" style="margin-top:50px;">
            <div class="row">
                <div class="clock"></div>
            </div>
        </div>
    </div>
    <div class="row text-center">
        <div class="row stit tk-anisette-petite">
            <h3 id="message" style="color:red; font-size:28px;" class="tk-anisette-petite text-shadow"></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <svg class="main_logo">
                    <use xlink:href="/logo-no-foot.svg#Layer_1"/>
                </svg>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="row">
                <svg class="main_logo2">
                    <use xlink:href="/rural-india.svg#Layer_1"/>
                </svg>
            </div>
        </div>

    </div>
</div>
</body>
</html>
